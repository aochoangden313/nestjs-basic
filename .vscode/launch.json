{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Nest Debug",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:debug",
                "-",
                "--inspect-brk" 
            ],
            "console": "integratedTerminal",
            "restart": true,
            "port": 9229,
            "autoAttachChildProcesses": true
        }
    ]
}